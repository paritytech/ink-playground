    "@types/react-dom": "^18.0.6",
    "@types/react-test-renderer": "^18.0.0",
    "@types/tailwindcss": "^3.0.10",
    "autoprefixer": "^10.4.7",
    "copy-webpack-plugin": "^11.0.0",
