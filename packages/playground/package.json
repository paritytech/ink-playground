{
  "name": "playground",
  "version": "1.0.0",
  "dependencies": {
    "comlink": "^4.3.1",
    "css-loader": "^6.7.1",
    "monaco-editor": "^0.33.0",
    "monaco-editor-webpack-plugin": "^7.0.1",
